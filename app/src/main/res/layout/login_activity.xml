  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/flatlogo" />

    <TextView
        android:id="@+id/textView"
        android:letterSpacing="0.5"
        android:text="@string/app_name"
        style="@style/signInText"/>

    <EditText
        android:id="@+id/usernameTextEdit"
        style="@style/editTextLoginStyle"
        android:hint="@string/usernameTextField"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passwordTextEdit"
        style="@style/editTextLoginStyle"
        android:hint="@string/passwordTextField"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/signInButton"
        style="@style/loginButton"
        android:text="@string/signInButtonText"
        />

  </LinearLayout>

